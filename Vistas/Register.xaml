<Window x:Class="Hanged_man.Vistas.Register"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Hangman | Register"
       Height="800" Width="1200"
       Background="#F9FAFB">
   <Grid>
       <Border Background="White" CornerRadius="10" Padding="20" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" 
               Effect="{DynamicResource ShadowEffect}">
           <StackPanel>
               <!-- Header -->
               <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                   <TextBlock Text="Hangman" FontSize="24" FontWeight="Bold" Foreground="#4F46E5" TextAlignment="Center" />
                   <TextBlock Text="Create your account" FontSize="14" Foreground="#6B7280" TextAlignment="Center" Margin="0,5,0,0" />
               </StackPanel>

               <!-- Full Name -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Full Name" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <Grid>
                       <TextBox x:Name="FullNameTextBox" Text="John Doe" 
                                BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" 
                                VerticalAlignment="Center" />
                       <TextBlock Text="👤" Foreground="#9CA3AF" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" />
                   </Grid>
               </StackPanel>

               <!-- Date of Birth -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Date of Birth" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <DatePicker x:Name="DateOfBirthPicker" BorderBrush="#D1D5DB" BorderThickness="1" Padding="5" />
               </StackPanel>

               <!-- Mobile Phone -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Mobile Phone" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <TextBox x:Name="PhoneTextBox" Text="1234567890" 
                            BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" />
               </StackPanel>

               <!-- Email -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Email" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <Grid>
                       <TextBox x:Name="EmailTextBox" Text="john@example.com" 
                                BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" />
                       <TextBlock Text="📧" Foreground="#9CA3AF" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" />
                   </Grid>
               </StackPanel>

               <!-- Password -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Password" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <Grid>
                       <PasswordBox x:Name="PasswordBox" 
                                    BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" />
                       <Button x:Name="TogglePasswordButton" Content="👁" 
                               Background="Transparent" BorderThickness="0" 
                               Foreground="#9CA3AF" HorizontalAlignment="Right" Margin="0,0,10,0" />
                   </Grid>
               </StackPanel>

               <!-- Confirm Password -->
               <StackPanel Margin="0,0,0,10">
                   <TextBlock Text="Confirm Password" FontSize="12" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,5" />
                   <Grid>
                       <PasswordBox x:Name="ConfirmPasswordBox" 
                                    BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" />
                       <Button x:Name="ToggleConfirmPasswordButton" Content="👁" 
                               Background="Transparent" BorderThickness="0" 
                               Foreground="#9CA3AF" HorizontalAlignment="Right" Margin="0,0,10,0" />
                   </Grid>
               </StackPanel>

               <!-- Register Button -->
               <Button Content="Register Account" Background="#4F46E5" Foreground="White" Padding="10" FontWeight="Medium" 
                       HorizontalAlignment="Stretch" Margin="0,0,0,10" />

               <!-- Back to Login -->
               <TextBlock TextAlignment="Center" FontSize="12" Foreground="#6B7280">
                   <Hyperlink Foreground="#4F46E5">Back to Login</Hyperlink>
               </TextBlock>
           </StackPanel>
       </Border>
   </Grid>
</Window>

